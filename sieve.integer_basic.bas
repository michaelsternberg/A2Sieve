1000 REM *** SIEVE OF ERATOSTHENES ***
1010 DIM A(4096)
1020 INITIALIZE     = 3000
1030 PROCESS        = 4000
1040 DISPLAYRESULTS = 5000

2000 REM *** MAIN ***
2010 CALL -936
2020 GOSUB INITIALIZE
2030 GOSUB PROCESS
2040 GOSUB DISPLAYRESULTS
2050 END

3000 REM *** INITIALIZE ***
3010 PRINT "INITIALIZING..."
3020 FOR I = 2 TO 4096
3030   A(I) = 1
3040 NEXT I
3050 RETURN

4000 REM *** PROCESS ***
4010 PRINT "PROCESSING..."
4020 FOR I = 2 TO 64
4030   IF A(I) # 1 THEN 4070
4040   FOR J = I * I TO 4096 STEP I
4050     A(J) = 0
4060   NEXT J
4070 NEXT I
4080 RETURN

5000 REM *** DISPLAY RESULTS ***
5010 FOR I = 2 TO 4096
5020   IF A(I) = 1 THEN PRINT I; " ";
5030 NEXT I
5040 RETURN
