1000 REM *** SIEVE OF ERATOSTHENES ***
1010 DIM A%(4096)

2000 REM *** MAIN ***
2010 HOME
2020 GOSUB 3000
2030 GOSUB 4000
2040 GOSUB 5000
2050 END

3000 REM *** INITIALIZE ***
3010 PRINT "INITIALIZING..."
3020 FOR I = 2 TO 4096
3030   A%(I) = 1
3040 NEXT
3050 RETURN

4000 REM *** PROCESS ***
4010 PRINT "PROCESSING..."
4020 FOR I = 2 TO 64
4030   IF A%(I) <> 1 THEN 4070
4040   FOR J = I * I TO 4096 STEP I
4050     A%(J) = 0
4060   NEXT
4070 NEXT
4080 RETURN

5000 REM *** DISPLAY RESULTS ***
5010 FOR I = 2 TO 4096
5020   IF A%(I) = 1 THEN PRINT I;" ";
5030 NEXT
5040 RETURN
